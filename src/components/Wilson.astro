<style>
  .wilson {
    --eye-y: 20%;
    --eye-x: 20%;

    --mouth-y: 50%;

    position: relative;
    width: 6rem;
    height: 6rem;
    border: 4px solid var(--color-white);
    border-radius: 50%;
    background-color: var(--color-yellow-300);
  }

  .eye {
    position: absolute;
    top: var(--eye-y);
  }

  .eye.left {
    left: var(--eye-x);
  }

  .eye.right {
    right: var(--eye-x);
  }

  .mouth {
    position: absolute;
    top: var(--mouth-y);
    left: 50%;
    transform: translateX(-50%);
  }
</style>
