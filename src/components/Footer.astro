---
import largeText from "@/assets/footer-big.svg";
import { Image } from "astro:assets";
const year = new Date().getFullYear();
---

<footer class="bg-black dark:bg-gray-950 text-gray-100 pt-20 pb-8">
  <div class="container mx-auto px-4 flex flex-col gap-12">
    <div class="w-full py-20">
      <Image src={largeText} alt="Nico Marston" width={1920} />
    </div>
    <div class="flex justify-between gap-12">
      <p class="text-base">
        Copyright {year} &copy; Nico Marston
      </p>
      <ul class="flex space-x-4 mt-2 md:mt-0">
        <li><a href="/#about" class="hover:underline">About</a></li>
        <li><a href="/#work" class="hover:underline">Work</a></li>
        <li><a href="/#contact" class="hover:underline">Contact</a></li>
      </ul>
    </div>
  </div>
</footer>
